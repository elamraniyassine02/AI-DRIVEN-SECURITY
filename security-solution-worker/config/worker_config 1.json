
{
  "worker_id": "worker1",
  "worker_type": "log_collector",
  "server": {
    "host": "192.168.100.66",
    "port": 5555
  },
  "log_collection": {
    "sources": [
      {
        "path": "/var/log/syslog",
        "type": "syslog"
      },
      {
        "path": "/var/log/auth.log",
        "type": "auth"
      },
      {
        "path": "/var/log/kern.log",
        "type": "kernel"
      }
    ],
    "interval": 60
  },
  "network_monitoring": {
    "interface": "eth0",
    "interval": 30
  },
  "logstash": {
    "host": "192.168.100.66",
    "port": 5044
  }
}